<%= form_for inquiry do |f| %>
  <% if inquiry.errors.any? %>
    <ul>
      <% inquiry.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <div style="display: none;">
    <%= f.label :nickname %><br/>
    <%= f.text_field :nickname %>
  </div>

  <div>
    <%= f.label :name %><br/>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :email %><br/>
    <%= f.text_field :email %>
  </div>

  <div>
    <%= f.label :message %><br/>
    <%= f.text_area :message %>
  </div>

  <p>Please allow up to 24 hours for a Customer Service Representative to respond to your inquiry. </p>

  <div>
    <%= f.submit "Send", class: "button", value: "Contact Us" %>
  </div>
<% end %>
