<header id="has-logo" class="row">
  <div class="large-6 medium-6 small-6 columns">
    <%=link_to root_path do %>
      <%=image_tag 'logo.jpg' %>
    <% end %>
  </div>

  <div class="large-6 medium-6 small-6 columns">
    <% if @profile %>
      <dl class="has-login">
        <dt>Welcome back, <%= @profile.first_name %> | <%= link_to 'Log Out', '#' %></dt>
        <dt class="gold">Available <%= @profile.member_status %> Card Bucks: <%= @profile.current_reward_progress %></dt>
      </dl>
    <% end %>
  </div>
</header>

<header id="has-navigation" class="row">
  <ul id="is-navigation">
    <li>Redeem Now</li>
    <li><%=link_to "Learn More", home_learn_more_path %></li>
    <li><%=link_to "FAQs", home_faqs_path %></li>
    <li><%=link_to "Customer Service", home_customer_service_path %></li>
    <li>Back to MyWeis Account</li>
  </ul>
</header>
